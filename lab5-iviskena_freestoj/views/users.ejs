<!DOCTYPE html>
<html>
    <head>
        <title>Users</title>
        <link rel="stylesheet" href="/css/user.css">
    </head>
    
    <body>
        <h1>Users</h1>

        <div class="button-container">
            <a href="/genuser" class="nice-button">Randomly generate a new user</a>
            <a href="/" class="nice-button">Return to Main Page</a>
        </div>
        

        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><a href="/user/<%= user.id %>"><%= user.name %></a></td>
                        <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
                        <td><%= user.age %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>
